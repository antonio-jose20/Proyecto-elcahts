        <form class="row">
            <div class="col-md-12">
                <h3 class="text-center">Modificar Usuarios </h3>
            </div>
            @*<input type="hidden" name="Username" id="Username" value="@Model.Username"/>*@
            <input type="hidden" name="Estado" id="Estado" value="True" />
            <div class="col-md-12 form-group">
                <label>Nombre usuario</label>
                <input  type="text" id="Username" name="Username"  value="@Model.Username" class="form-control" />
            </div>

            <div class="col-md-12 form-group">
                <label>Nombre </label>
                <input type="text" id="NombreCompleto" name="NombreCompleto" value="@Model.NombreCompleto" class="form-control" />
            </div>
            <div class="col-md-12 form-group">
                <label>Apellidos</label>
                <input type="text" id="Apellido" name="Apellidos"  value="@Model.Apellidos" class="form-control" />
            </div>
            <div class="col-md-12 form-group">
                <label>Direccion</label>
                <input type="text" id="Direccion" name="Direccion" value="@Model.Direccion" class="form-control" />
            </div>
            <div class="col-md-12 form-group">
                <label>Dui</label>
                <input type="text" id="Dui" name="Dui"  value="@Model.Dui" class="form-control" />
            </div>
            <div class="col-md-12 form-group">
                <label>Telefono</label>
                <input type="text" id="Telefono" name="Telefono" value="@Model.Telefono" class="form-control" />
            </div>
            <div class="col-md-12 form-group"> 
                <label>Email</label>
                <input type="text" id="Email" name="Email" value="@Model.Email" class="form-control" />
            </div>

            @*<div class="col-md-12 form-group">
                <label>Password</label>
                <input type="text" id="Password" name="Password" value="@Model.Password" class="form-control" />
            </div>*@
            <!--icon eye-->
            <div class="col-md-12 form-group">
                <label for="departamento">
                    <input type="password" name="Password" value="@Model.Password" class="form-control password1"  placeholder="Ingrese una contraseña" />
                    <span class="fa fa-fw fa-eye password-icon show-password"></span>
                </label>
            </div>

            <div class="col-md-12 form-group">
                <p class="text-right">
                    <!--Imagen-->
                    @*<div class="col-md-12 form-group">
                        <label for="File">Imagen</label>

                        <input class="form-control text-box single-line" id="File" name="File" type="file" value="" />
