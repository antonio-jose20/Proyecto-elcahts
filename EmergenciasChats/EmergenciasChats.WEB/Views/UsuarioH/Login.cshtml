@model EmergenciasChats.EL.UsuarioH

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div id="contenido">
    <div class="principal">
        <img src="~/Image/foto2.jpg" alt="shopping" width="40" height="50" />
    </div>

    <div class="aside">
        <h2>Iniciar Sesión</h2>
        <form method="post" action="@Url.Action("Login", "UsuarioH")">
          
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="Email" id="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" name="Password" id="Password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-info btn-block">Login</button>
        </form>

        <hr />
        <p>No tienes una cuenta?. <a href="@Url.Action("Create", "UsuarioH")">Registrarse</a></p>

    </div>
</div>