                        <span class="field-validation-valid text-danger" data-valmsg-for="File" data-valmsg-replace="true"></span>
                    </div>

                    @*<img id="ImagenR" name="ImagenR">
                    <input type="hidden" ng-model="Imagen" class="form-control" id="Imagen" />*@

                    <div>
                        <img id="ImagenR" name="ImagenR" src="@Model.Imagen">
                        <input type="hidden" name="Imagen" id="Imagen" value="@Model.Imagen" />
                    </div>
                    <!--imagen-->

                    <!---->
                    @*<div class="form-group">
                        <button type="button" class="btn btn-primary" ng-click="updatedata()">Guardar</button>
                        <input type="button" ng-click="reset()" value="Limpiar" />
